{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "ESNext",
    "lib": [
      "ES2021",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "declarationDir": "dist/types",
    "useUnknownInCatchVariables": false,
    "outDir": "dist/lib"
  },
  "include": [
    "example-node.ts"
  ]
}