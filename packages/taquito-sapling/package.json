{
  "name": "@exodus/taquito-sapling",
  "version": "16.1.1-exodus.10",
  "description": "Allows reading and preparing sapling transactions",
  "keywords": [
    "tezos",
    "sapling"
  ],
  "main": "dist/lib/taquito-sapling.js",
  "typings": "dist/types/taquito-sapling.d.ts",
  "files": [
    "signature.json",
    "dist",
    "fetch-sapling-params.js"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Roxane Letourneau <roxane@ecadlabs.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "lint": "eslint --ext .js,.ts .",
    "precommit": "lint-staged",
    "prebuild": "rimraf dist",
    "version-stamp": "node ../taquito/version-stamping.js",
    "build": "tsc --project ./tsconfig.prod.json ",
    "start": "rollup -c rollup.config.ts -w",
    "postinstall": "node fetch-sapling-params.js"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^@exodus/taquito-utils$": "<rootDir>/../taquito-utils/src/taquito-utils.ts",
      "^@exodus/taquito-taquito$": "<rootDir>/../taquito/src/taquito.ts"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ]
  },
  "dependencies": {
    "@airgap/sapling-wasm": "0.0.9",
    "@stablelib/nacl": "^1.0.3",
    "@stablelib/random": "^1.0.1",
    "@exodus/taquito-rpc": "^16.1.1-exodus.10",
    "@exodus/taquito-taquito": "^16.1.1-exodus.10",
    "@exodus/taquito-utils": "^16.1.1-exodus.10",
    "bignumber.js": "^9.1.0",
    "bip39": "^3.0.4",
    "blakejs": "^1.2.1",
    "pbkdf2": "^3.1.2",
    "typedarray-to-buffer": "^4.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20",
    "@types/pbkdf2": "^3.1.0",
    "@types/typedarray-to-buffer": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "axios": "^0.27.2",
    "colors": "^1.4.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "jest": "^29.7.0",
    "jest-config": "^29.7.0",
    "lint-staged": "^12.1.2",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^2.5.1",
    "prompt": "^1.2.0",
    "replace-in-file": "^6.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.1",
    "shelljs": "^0.8.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.4.0",
    "typescript": "~4.9.5"
  },
  "type": "module"
}
